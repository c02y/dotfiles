wget -c https://raw.githubusercontent.com/jonniek/mpv-playlistmanager/master/playlistmanager.conf -O script-opts/playlistmanager.conf
wget -c https://raw.githubusercontent.com/torque/mpv-progressbar/build/progressbar.lua -O scripts/progressbar.lua
wget -c https://raw.githubusercontent.com/po5/thumbfast/master/thumbfast.lua -O scripts/thumbfast.lua
