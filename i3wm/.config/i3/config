# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	i3bar_command i3bar
	status_command i3status-rs ~/.config/i3/i3status-rust.toml
	position top
	font pango:DejaVu Sans Mono, Font Awesome 5 Free bold 12
	Height $bar_height
	workspace_min_width 40
	tray_padding 2
	# show only worksapce name parts without the numbers
	strip_workspace_numbers yes
	colors {
		separator #666666
		# NOTE: the background should have the same value as the last block in the i3status-rust.toml
		background #222222
		statusline #dddddd
		focused_workspace #0088CC #0088CC #ffffff
		active_workspace #333333 #333333 #ffffff
		inactive_workspace #333333 #333333 #888888
		urgent_workspace #2f343a #900000 #ffffff
	}
