# https://gist.github.com/redguardtoo/d4ecd51f785bd117a6a0 for more 
# NOTE: if the global name and email (~/.gitconfig) are different from those in a specific repo
# Please do `git config user.name "name"` and `git config user.email "mail@com"` in the repo
[user]
	name = c02y
	email = cody.chan.cz@gmail.com
[credential]
	helper = cache --timeout 86400
[core]
	filemode = true
	#pager = less -iXFR
#[merge]
#	tool = meld
[color]
	ui = true
[github]
	user = c02y
	token =
[push]
	default = simple
[http]
	postBuffer = 524288000
[pager]
	log  = diff-highlight | less -iXFR
	show = diff-highlight | less -iXFR
	diff = diff-highlight | less -iXFR
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = green bold 52
	newNormal = green bold
	newHighlight = red bold 22
[color "diff"]
	frag = red 22
	meta = yellow
	commit = yellow bold
	old = red bold
	whitespace = red reverse
[submodule]
    recurse = true
[status]
	showStash = true
